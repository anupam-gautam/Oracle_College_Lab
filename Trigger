
CREATE TABLE STUDENT_DATA(ID INT PRIMARY KEY, NAME VARCHAR(10), MATH NUMBER, SCIENCE NUMBER, SOCIAL NUMBER, TOTAL NUMBER, PERCENTAGE NUMBER, REMARKS VARCHAR(100));
SELECT * FROM STUDENT_DATA;


INSERT INTO STUDENT_DATA(ID,NAME,MATH,SCIENCE,SOCIAL) VALUES(3,'RASMITA',23,22,12);

CREATE OR REPLACE TRIGGER STUDENT_RESULT_COMPUTE
BEFORE INSERT ON STUDENT_DATA
FOR EACH ROW 
BEGIN
:NEW.TOTAL:=:NEW.MATH+:NEW.SCIENCE+:NEW.SOCIAL;
:NEW.PERCENTAGE:=:NEW.TOTAL/5;
IF :NEW.PERCENTAGE>=80 THEN
:NEW.REMARKS:='DISTINCTION';
ELSIF :NEW.PERCENTAGE>=60 THEN
:NEW.REMARKS:= 'FIRST DIVISION';
ELSE
:NEW.REMARKS:= 'NO DIVISION';
END IF;
END;
